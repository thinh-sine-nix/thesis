{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2020",
        "allowJs": true,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "strict": false,
        "strictFunctionTypes": false,
        "noImplicitThis": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
