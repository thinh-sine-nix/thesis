<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./header.ejs') %>
        <link rel="stylesheet" href="/assets/css/video-grid.css" />
        <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
        <script src="https://cdn.tiny.cloud/1/4u3y1qnz6drcugojz6fq4ll0epw682eqntfl591k30la1jsd/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="join">
            <form>
                <input id="name" type="text" placeholder="Enter your name" required />
                <button id="create-room" class="button-38" type="submit">
                    <i class="fa-solid fa-right-to-bracket"></i>
                    Join
                </button>
            </form>
        </div>
        <div class="call" style="display: none">
            <div class="Scenary"></div>
            <div class="control">                                                            
                <button class="copy-link button-38" title="copy share link">
                    <i class="fa-solid fa-link"></i>
                </button>
                <button class="enable-audio toggle-audio button-38" style="display: none" title="turn on microphone">
                    <i class="fa-solid fa-microphone-slash"></i>
                </button>
                <button class="disable-audio toggle-audio button-38" title="turn off microphone">
                    <i class="fa-solid fa-microphone"></i>
                </button>
                <button class="toggle-video enable-video button-38" style="display: none" title="turn on camera">
                    <img src="/assets/img/camera-slash.svg" width="20px" height="20px" alt="camera-off"/>
                </button>
                <button class="toggle-video disable-video button-38" title="turn off camera">
                    <i class="fa-solid fa-camera"></i>
                </button>
                <button class="leave-room button-38" title="leave call">
                    <i class="fa-solid fa-arrow-right-from-bracket"></i>
                    Leave
                </button>
                <button id="whiteboard-btn" class="btn btn-primary px-4 py-2" title="Open Whiteboard">
                    <i class="fa-solid fa-chalkboard me-2"></i>
                    Whiteboard
                </button>                                                   
                <button class="toggle-chat button-38">
                    <span style="display: none">âš«</span>
                    <i class="fa-solid fa-message"></i>
                </button>
            </div>
            <div class="chat" style="display: none">
                <div class="chat-heading">
                    <h4>Chat</h4>
                    <i class="fa-solid fa-xmark chat-heading-close"></i>
                </div>
                <div class="chat-content"></div>
                <form>
                    <!-- Modal to show enlarged image -->
                    <div id="imageModal" class="image-modal">
                        <span class="close-modal">&times;</span>
                        <img class="modal-content" id="fullImage">
                    </div>
                    <div id="upload_widget" class="cloudinary-button upload-btn">
                        <img src="/assets/img/upload.png" width="28px" height="28px" alt="upload"/>
                    </div>
                    <input type="text" placeholder="Send Message" class="chat-form-input" name="message">
                    <button type="submit" title="send" class="send-btn">
                        <img src="/assets/img/send.png" width="26px" height="26px" alt="send"/>
                    </button>
                </form>
            </div>
            <!-- Room ID display -->
            <div class="room-id-container">
                <div class="box">Room ID: <span id="room-id"></span></div>
                <div class="box">Call Duration: <span id="timer" class="text-warning">00:00:00</span></div>  
            </div>            
        </div>
    </body> 
    <script src="/assets/js/video-grid.js"></script>
    <script src="https://unpkg.com/peerjs@1.4.7/dist/peerjs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js"></script>
    <script>
        const roomId = '<%=roomId %>';
        document.getElementById('room-id').textContent = roomId;
        document.getElementById('whiteboard-btn').onclick = () => {
            // Redirect to a shared whiteboard session for the room
            window.open(`https://excalidraw.com/#room=${roomId}&collaborate=true`, '_blank');
        };
    </script>
    <script src="/assets/js/media.js"></script>
    <script src="/assets/js/call.js"></script>
</html>
